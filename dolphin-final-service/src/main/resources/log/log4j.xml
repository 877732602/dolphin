<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	threshold="null" debug="null">

	<appender name="avatarAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- <param name="Threshold" value="INFO" /> -->
		<param name="File" value="/data/applogs/dolphin-final-service/logs/avatar.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[dolphin-final-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="appAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- <param name="Threshold" value="INFO" /> -->
		<param name="File" value="/data/applogs/dolphin-final-service/logs/app.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[dolphin-final-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<appender name="illegalAccessAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/dolphin-final-service/logs/illegalAccess.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[dolphin-final-service]%d %-5p [%c] %m%n" />
		</layout>
	</appender>

	<logger name="org.springframework.jms">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.activemq">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache.struts2">
		<level value="ERROR" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="appAppender" />
		<!--<appender-ref ref="HAWK" />-->
		<appender-ref ref="catAppender" />
	</root>

</log4j:configuration>
